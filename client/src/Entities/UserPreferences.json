{
  "name": "UserPreferences",
  "type": "object",
  "properties": {
    "native_language": {
      "type": "string",
      "enum": [
        "english",
        "hebrew"
      ],
      "default": "english",
      "description": "User's native language"
    },
    "gender": {
      "type": "string",
      "enum": [
        "male",
        "female"
      ],
      "default": "male",
      "description": "User's gender for voice synthesis"
    },
    "camera_permission": {
      "type": "boolean",
      "default": false,
      "description": "Camera access permission"
    },
    "microphone_permission": {
      "type": "boolean",
      "default": false,
      "description": "Microphone access permission"
    }
  },
  "required": [
    "native_language",
    "gender"
  ],
  "rls": {
    "read": {
      "created_by": "{{user.email}}"
    },
    "write": {
      "created_by": "{{user.email}}"
    }
  }
}
