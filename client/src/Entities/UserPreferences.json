{
  "name": "UserPreferences",
  "type": "object",
  "properties": {
    "native_language": {
      "type": "string",
      "default": "english",
      "description": "User's native language"
    },
    "gender": {
      "type": "string",
      "default": "male",
      "description": "User's gender for voice synthesis"
    },
    "display_name": {
      "type": "string",
      "default": "",
      "description": "User's display name"
    },
    "camera_permission": {
      "type": "boolean",
      "default": false,
      "description": "Camera access permission"
    },
    "microphone_permission": {
      "type": "boolean",
      "default": false,
      "description": "Microphone access permission"
    }
  },
  "required": ["native_language", "gender", "display_name"],
  "rls": {
    "read": {
      "user_id": "auth.uid()"
    },
    "write": {
      "user_id": "auth.uid()"
    }
  }
}
