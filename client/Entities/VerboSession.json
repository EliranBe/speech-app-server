{
  "name": "VerboSession",
  "type": "object",
  "properties": {
    "session_code": {
      "type": "string",
        "pattern": "^[A-Za-z0-9]{8}$",
      "description": "8-character alphanumeric session password"
    },
    "meeting_id": {
      "type": "string",
        "pattern": "^[0-9]{20}$",
      "description": "Unique 20-digit numeric meeting ID"
    },
    "session_url": {
      "type": "string",
        "format": "uri",
        "pattern": "^https://",
      "description": "Shareable HTTPS URL for joining the session"
    },
    "qr_data": {
      "type": "string",
      "description": "QR code data containing the session URL"
    },
    "creator_id": {
      "type": "string",
      "description": "User ID of session creator"
    },
    "is_active": {
      "type": "boolean",
      "default": true,
      "description": "Session status"
    },
    "participant_id": {
      "type": "string",
      "description": "User ID of participant who joined"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Session creation timestamp"
    }
  },
  "required": [
    "session_code",
    "meeting_id",
    "session_url",
    "qr_data",
    "creator_id"
  ]
}
